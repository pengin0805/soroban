<%= render "shared/header"%>
<div class="AccountPage">
  <div class="AccountPage__title">
    <h1>マイページ</h1>
  </div><br>
  <% if current_user.card.present? %>
  <div class="Card__title">
    <h2>カード情報</h2>
  </div>
  <div class="Card_info">
    【カード番号】
    <br>
    <%= "**** **** **** " + @card[:last4] %>
    <%# カード番号の下4桁を取得 %>

    <br>
    【有効期限】
    <br>
    <%= @card[:exp_month] %>
    <%# 有効期限の「月」を取得 %>
    /
    <%= @card[:exp_year] %>
    <%# 有効期限の「年」を取得 %>
  </div>
  <% else %>
    <%= link_to "クレジットカードの登録", new_card_path %>
  <% end %>
  <div class="subsc">
    <div class="subsc_title">
      <h2>定期購入 </h2>
    </div>
    <div class="subsc_info">
      金額：¥50/月
      <br>
      支払日：毎月27日
      <br>
      <% if current_user.premium %>
        <%= link_to '退会する',cancel_cards_path %>
      <% else %>
        <%= link_to '購入する',pay_cards_path %>
      <% end %>
    </div>
  </div>
  <div class="Account__info">
    <h2>ユーザー情報</h2>
  </div>
  <div class="AccountPage__form">
    <%= form_for(current_user) do |f| %>
      <div class="FormField">
        <div class="FormField__name">
          <%= f.label :nickname %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :nickname, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__email">
          <%= f.label :email %>
        </div>
        <div class="FormField__email">
          <%= f.email_field :email %>
        </div>
        <br>
      </div>
      <%= f.submit "更新する" %>
    <% end %>
    <br>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete%>
    <br>
    <%= link_to "トップページに戻る", root_path%>
  </div>
</div>